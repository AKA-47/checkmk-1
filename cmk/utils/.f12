#!/bin/bash
set -e

ME="cmk/utils/.f12"

SITE=${SITE:-$(until [ $PWD == / ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE

echo "[$ME] Update site $SITE..."

echo "[$ME] Copy CRE files..."
sudo rsync \
    --exclude="__pycache__" \
    --exclude="*.pyc" \
    --exclude="flycheck*" \
    -a * $ROOT/lib/python3/cmk/utils/


# Also deploy all other directories of same type
if [ ${ALL_EDITIONS:-1} != 0 ]; then
    for WHAT in enterprise managed; do
        if [ -e ../../$WHAT/cmk/utils/.f12 ]; then
            (
                cd ../../$WHAT/cmk/utils
                ONLY_COPY=1 ALL_EDITIONS=0 bash .f12
            )
        fi
    done
fi

if [ -z "$ONLY_COPY" ]; then
    sudo $ROOT/bin/python3 -m compileall -qq $ROOT/lib/python3/cmk/utils
fi
