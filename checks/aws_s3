def parse_aws_s3(info):
    return _extract_aws_metrics([
        'NumberOfObjects',
        'BucketSizeBytes',
    ], parse_aws(info))


def inventory_aws_s3(parsed):
    if parsed:
        return [(None, {})]


def check_aws_s3(item, params, parsed):
    yield 0, 'Number of objects: %s' % int(parsed['NumberOfObjects'])
    yield 0, 'Size: %s' % get_bytes_human_readable(parsed['BucketSizeBytes'])


check_info['aws_s3'] = {
    'parse_function': parse_aws_s3,
    'inventory_function': inventory_aws_s3,
    'check_function': check_aws_s3,
    'service_description': 'AWS/S3',
    'includes': ['aws.include'],
}
