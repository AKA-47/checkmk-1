def parse_sap_hana_version(info):
    parsed = {}
    instance = ""
    for line in info:
        if line[0].startswith("[[[") and line[0].endswith("]]]"):
            instance  = line[0][3:-3]
            continue

        line = map(lambda x: x.strip(), line)
        if line[0].lower() == "hdb version info":
            continue

        if line[0] in ["git merge time", "compile date", ]:
            line_data = ":".join(line[1:])
        else:
            line_data = " ".join(line[1:])

        inst_data = parsed.setdefault(instance, {})
        inst_data.setdefault(line[0], line_data)
    return parsed


def inventory_sap_hana_version(parsed):
    return [(instance, None) for instance in parsed]


def check_sap_hana_version(item, params, parsed):
    if item not in parsed:
        return
    return 0, "Version: %s" % parsed[item]["version"]


check_info['sap_hana_version'] = {
    'parse_function'        : parse_sap_hana_version,
    'inventory_function'    : inventory_sap_hana_version,
    'check_function'        : check_sap_hana_version,
    'service_description'   : 'SAP HANA Version',
}
